<div class="panel panel-primary">
  <div class="panel-heading">
  <h3 class="panel-title" style="text-align: center;"  >Message</h3>
  </div>
   <div class="panel-body">

<%= form_for(@message,:class=> "navbar-form navbar-left") do |f| %>
         
    <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class:"form-control", placeholder: 'Your name' %>
  </div>
  <div class="form-group">
    <%= f.label :email %><br>
    <%= f.text_field :email, class:"form-control", placeholder: 'Your email' %>
  </div>
  <div class="form-group">
    <%= f.label :subject %><br>
    <%= f.text_field :subject, class:"form-control", placeholder: 'Subject' %>
  </div>
  <div class="form-group">
    <%= f.label :body %><br>
    <%= f.text_area :body,:cols => "10", :rows => "10", class:"form-control", placeholder: 'Body' %>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-success" %>
  </div>
<% end %>
</div>
</div>
